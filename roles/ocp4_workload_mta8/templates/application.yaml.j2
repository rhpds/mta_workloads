---
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: mta
  namespace: openshift-gitops
  finalizers:
  - resources-finalizer.argocd.argoproj.io
spec:
  destination:
    name: ''
    namespace: {{ ocp4_workload_mta8_namespace_base }}
    server: 'https://kubernetes.default.svc'
  project: default
  syncPolicy:
    syncOptions:
    - CreateNamespace=true
    automated:
      prune: false
      selfHeal: false
  source:
    repoURL: {{ ocp4_workload_mta8_repo }}
    targetRevision: {{ ocp4_workload_mta8_repo_tag }}
    path: {{ ocp4_workload_mta8_repo_path }}
    helm:
      values: |
        fullNameOverride: {{ ocp4_workload_mta8_namespace_base }}
        namespacePermissions:
          user: {{ ocp4_workload_mta8_user }}
          role: {{ ocp4_workload_mta8_role }}
        seedTackle: {{ ocp4_workload_mta8_seed }}
        deployOperator: {{ ocp4_workload_mta8_deploy_operator }}
        operatorChannel: {{ ocp4_workload_mta8_channel }}
        useCatalogSnapshot: {{ ocp4_workload_mta8_catalogsource_setup }}
        catalogSource:
          name: {{ ocp4_workload_mta8_catalogsource_name }}
          namespace: {{ ocp4_workload_mta8_namespace_base }}
          image: {{ ocp4_workload_mta8_catalogsource_image }}
          tag: {{ ocp4_workload_mta8_catalogsource_image_tag }}
{% if ocp4_workload_mta8_seed | bool %}
        seedJob:
          repository: {{ ocp4_workload_mta8_seed_image }}
          tag: "{{ ocp4_workload_mta8_seed_tag }}"
          pullPolicy: {{ ocp4_workload_mta8_seed_pull_policy }}
{% endif %}
        tackleInstance:
          rwxSupported: "{{ ocp4_workload_mta8_rwx_supported | bool }}"
{% if ocp4_workload_mta8_feature_auth_required is defined %}
          featureAuthRequired: {{ ocp4_workload_mta8_feature_auth_required }}
{% endif %}
{% if ocp4_workload_mta8_rwx_storage_class | default("") | length > 0 %}
          rwxStorageClass: {{ ocp4_workload_mta8_rwx_storage_class }}
{% endif %}
{% if ocp4_workload_mta8_rwo_storage_class | default("") | length > 0 %}
          rwoStorageClass: {{ ocp4_workload_mta8_rwo_storage_class }}
{% endif %}
{% if ocp4_workload_mta8_maven_data_volume_size | default("") | length > 0 %}
          mavenDataVolumeSize: {{ ocp4_workload_mta8_maven_data_volume_size }}
{% endif %}
{% if ocp4_workload_mta8_hub_database_volume_size | default("") | length > 0 %}
          hubDatabaseVolumeSize: {{ ocp4_workload_mta8_hub_database_volume_size }}
{% endif %}
{% if ocp4_workload_mta8_keycloak_database_data_volume_size | default("") | length > 0 %}
          keycloakDatabaseDataVolumeSize: {{ ocp4_workload_mta8_keycloak_database_data_volume_size }}
{% endif %}
{% if ocp4_workload_mta8_pathfinder_database_data_volume_size | default("") | length > 0 %}
          pathfinderDatabaseDataVolumeSize: {{ ocp4_workload_mta8_pathfinder_database_data_volume_size }}
{% endif %}
